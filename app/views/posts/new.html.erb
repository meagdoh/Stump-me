
<div class="form">
	<h1>Create New Recipe for <%=@topic.name%></h1>
	<%= form_for [@topic, @post] do |f| %>
		  <%= f.label :name %>
		  <%= f.text_field :name %>

		  <%= f.label :ingredients %>
		  <%= f.text_field :ingredients %>

		  <%= f.label :instructions %>
		  <%= f.text_field :instructions %>

			<%= f.submit %>
	<% end %>
</div>
