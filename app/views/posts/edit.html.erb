<div class="form">
  <h1>Edit "<%=@post.name%>"</h1>
    <%= form_for [@topic, @post] do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :ingredients %>
      <%= f.text_field :ingredients %>

      <%= f.label :instructions %>
      <%= f.text_field :instructions %>

      <%= f.submit "Edit" %>
    <% end %>
</div>
