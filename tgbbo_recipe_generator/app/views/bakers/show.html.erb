<h1><%= @baker.name%></h1>
 <img src="<%= @baker.img_url %>"/>
 <h2><%= @baker.name%></h2>



<h3>Recipes <%=link_to "+", new_baker_recipe_path(@baker) %></h3>

<ul>
  <% @baker.recipes.each do |recipe| %>
    <li>
      <a href="/bakers/<%=@baker.id %>/recipes/<%= recipe.id %>">
        <%= "#{recipe.name}" %>
      </a>
    </li>
    <h3><%=link_to "Edit", edit_baker_recipe_path(@baker) %></h3>
    <h3><%=link_to "Delete", baker_recipe_path(@baker, recipe), method: :delete%></h3>
  <% end %>
</ul>